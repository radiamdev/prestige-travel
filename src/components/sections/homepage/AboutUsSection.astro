---
import Icon1 from '../../../assets/icons/cibler.svg'
import Icon2 from '../../../assets/icons/team-building.svg'
import Icon3 from '../../../assets/icons/proposition.svg'

interface Props {
    t: (key: string) => string
}

const { t } = Astro.props as Props
---

<section id="about-us" class="bg-white lg:px-24 px-6 lg:py-16 py-12 space-y-8">
    <div class="max-w-2xl mx-auto space-y-6">
        <p class="text-black font-bold text-center">
            {t('homePage.aboutUsSection.subtitle')}
        </p>
        <h1 class="text-primary text-5xl font-bold text-center">
            {t('homePage.aboutUsSection.title')}
        </h1>
        <p class="text-black/70 text-center">
            {t('homePage.aboutUsSection.description')}
        </p>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-3 lg:gap-12 gap-0">
        <div class="flex flex-col items-center justify-center gap-4 p-6">
            <Icon1 width={64} />
            <h4 class="font-semibold text-lg text-black">
                {t('homePage.aboutUsSection.ourMission')}
            </h4>
            <p class="text-center text-black/70">
                {t('homePage.aboutUsSection.ourMissionDescription')}
            </p>
        </div>
        <div class="flex flex-col items-center justify-center gap-4 p-6">
            <Icon2 width={64} />
            <h4 class="font-semibold text-lg text-black">
                {t('homePage.aboutUsSection.ourTeam')}
            </h4>
            <p class="text-center text-black/70">
                {t('homePage.aboutUsSection.ourTeamDescription')}
            </p>
        </div>
        <div class="flex flex-col items-center justify-center gap-4 p-6">
            <Icon3 width={64} />
            <h4 class="font-semibold text-lg text-black">
                {t('homePage.aboutUsSection.ourValues')}
            </h4>
            <p>
                <ul class="list-disc text-black/70">
                    <li>{t('homePage.aboutUsSection.value1')}</li>
                    <li>
                        {t('homePage.aboutUsSection.value2')}
                    </li>
                    <li>{t('homePage.aboutUsSection.value3')}</li>
                </ul>
            </p>
        </div>
    </div>
</section>
