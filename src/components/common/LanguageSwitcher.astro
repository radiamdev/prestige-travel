---
const { locale } = Astro.i18n;
const locales = ['en', 'it', 'de'];
const localeNames = {
  en: 'English',
  it: 'Italiano',
  de: 'Deutsch',
};
---

<nav class="flex justify-center space-x-4 py-4">
    {locales.map((lang) => (
      <a
        href={`/${lang}${Astro.url.pathname.replace(`/${locale}`, '')}`}
        class={`px-4 py-2 rounded ${locale === lang ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-800 hover:bg-gray-300'}`}
        aria-label={`Switch to ${localeNames[lang]}`}
      >
        {localeNames[lang]}
      </a>
    ))}
  </nav>
  
  