---
const {
    id = 'message',
    label = 'Message',
    placeholder = 'Your message',
    rows = 5,
} = Astro.props
---

<div class="space-y-2">
    <label for={id} class="block text-sm font-medium text-gray-700"
        >{label}</label
    >
    <textarea
        id={id}
        name={id}
        placeholder={placeholder}
        rows={rows}
        aria-label={label}
        class="w-full px-4 py-3 bg-white border border-gray-900 rounded-xl focus:border-primary focus:outline-none transition-colors duration-300 text-gray-700 placeholder-gray-400 resize-none"
        required></textarea>
</div>
