---
import VehicleGallerySlider from './VehicleGallerySlider'

interface Props {
    t: (key: string) => string
}

const { t } = Astro.props as Props
---

<section class="bg-pink-primary lg:px-24 px-6 lg:py-16 py-12 space-y-4">
    <div class="space-y-4 pb-8 max-w-2xl mx-auto">
        <p class="text-black font-bold text-center">
            {t('carRentalPage.availableVehiclesSection.subtitle')}
        </p>
        <h1
            class="text-primary text-5xl font-bold leading-tight text-center drop-shadow-2xl"
        >
            {t('carRentalPage.availableVehiclesSection.title')}
        </h1>
        <p class="text-gray-600 text-center">
            {t('carRentalPage.availableVehiclesSection.description')}
        </p>
    </div>

    <!-- âœ… Mettre la directive client:load directement sur le composant -->
    <VehicleGallerySlider client:load />
</section>
