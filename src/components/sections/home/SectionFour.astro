---
import { Image } from 'astro:assets'
import maki from '../../../assets/images/home/maki_travel.webp'
import background from '../../../assets/images/home/heureuse-femme.webp'
import Icon1 from '../../../assets/icons/tout-inclus.svg'
import Icon2 from '../../../assets/icons/half.svg'
import Icon3 from '../../../assets/icons/equipe.svg'
import Icon4 from '../../../assets/icons/caravane.svg'
import Icon5 from '../../../assets/icons/transfert.svg'
import reservationIcon from '../../../assets/icons/reservation.svg'
import BookingButton from '../../common/BookingButton.astro'

const travelPackages = [
    {
        icon: Icon1,
        title: 'All-Inclusive',
        details: ['➤ Accommodation, meals, transport & guided tours included'],
    },
    {
        icon: Icon2,
        title: 'Half-Board',
        details: ['➤ Accommodation + breakfast and dinner'],
    },
    {
        icon: Icon3,
        title: 'Group Travel',
        details: [
            '➤ Shared tours with other travelers',
            '➤ Social, budget-friendly atmosphere',
        ],
    },
    {
        icon: Icon4,
        title: 'Car Rental Travel',
        details: [
            '➤ Self-drive or driver-assisted tours',
            '➤ 4x4s, minibuses, AC, insurance included',
        ],
    },
    {
        icon: Icon5,
        title: 'Private Transfers',
        details: [
            '➤ Airport pick-up/drop-off, inter-city, parks',
            '➤ Safe, timely, and comfortable',
        ],
    },
]
---

<section
    id=""
    class="relative bg-primary lg:px-24 px-6 lg:py-16 py-12 flex lg:flex-row flex-col items-center lg:gap-0 gap-8 overflow-hidden"
>
    <!-- Image de fond avec effet blur et opacity -->
    <div class="absolute inset-0 z-0">
        <Image
            src={background}
            alt="Background image"
            class="w-full h-full object-cover opacity-30 blur-sm"
            fetchpriority="high"
        />
        <!-- Overlay supplémentaire pour ajuster l'opacité -->
        <div class="absolute inset-0 bg-primary/40"></div>
    </div>

    <!-- Image principale à gauche -->
    <div class="relative z-10 lg:w-1/2 w-full flex items-center justify-center">
        <div class="relative">
            <!-- Effet de bordure décorative -->
            <div
                class="absolute -left-4 top-1/2 transform -translate-y-1/2 flex flex-col gap-2"
            >
                <div class="w-2 h-2 bg-white rounded-full opacity-60"></div>
                <div class="w-2 h-2 bg-white rounded-full opacity-60"></div>
                <div class="w-2 h-2 bg-white rounded-full opacity-60"></div>
                <div class="w-2 h-2 bg-white rounded-full opacity-40"></div>
                <div class="w-2 h-2 bg-white rounded-full opacity-40"></div>
                <div class="w-2 h-2 bg-white rounded-full opacity-20"></div>
            </div>

            <Image
                src={maki}
                alt="Nature & Wildlife Tours"
                class="h-auto w-sm rounded-lg shadow-2xl relative z-10"
                fetchpriority="high"
            />
        </div>
    </div>

    <!-- Contenu à droite -->
    <div class="relative z-10 lg:w-1/2 w-full space-y-4">
        <p class="text-white font-bold lg:text-start text-center opacity-90">
            Available Packages:
        </p>
        <h1
            class="text-pink-secondary text-5xl font-bold leading-tight lg:text-start text-center drop-shadow-lg"
        >
            Types of Travel <br />Packages
        </h1>

        <div
            class="space-y-6 bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20"
        >
            {
                travelPackages.map(({ icon: Icon, title, details }) => (
                    <div
                        class="flex items-start gap-4 p-3 rounded-lg bg-white/5 backdrop-blur-sm border border-white/10 hover:bg-white/10 transition-all duration-300"
                        role="group"
                    >
                        <div class="flex-shrink-0 p-2 bg-white/20 rounded-lg backdrop-blur-sm">
                            <Icon width={24} height={24} />
                        </div>
                        <div class="text-white space-y-2">
                            <p class="font-bold text-lg">{title}</p>
                            {details.map((line) => (
                                <p class="text-sm opacity-90 leading-relaxed">
                                    {line}
                                </p>
                            ))}
                        </div>
                    </div>
                ))
            }
        </div>

        <!-- Booking button -->
        <div class="flex lg:justify-start justify-center">
            <BookingButton
                label="Booking"
                icon={reservationIcon.src}
                iconAlt="Reservation icon"
                className="mt-8 shadow-2xl hover:shadow-pink-secondary/20 transition-all duration-300"
            />
        </div>
    </div>
</section>
