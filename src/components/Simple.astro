---
import { getTranslations } from "../lib/utils/i18n";

const { locale } = Astro.i18n; // Get current locale (e.g., 'en', 'it', 'de')
const t = getTranslations(locale);


---

<section class="py-8 max-w-4xl mx-auto px-4">
    <h2 class="text-2xl font-bold text-center mb-4">{t.carRentalPage.gallerySection.title}</h2>
    <ul class="list-disc pl-6">
      {t.carRentalPage.gallerySection.vehicles.map((vehicle: string) => (
        <li class="text-lg">{vehicle}</li>
      ))}
    </ul>
  </section>
  
  