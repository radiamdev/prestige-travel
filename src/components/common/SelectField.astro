---
const { id, label, options = [], required = false } = Astro.props
---

<div class="space-y-2 relative">
    <label for={id} class="block text-sm font-medium text-gray-700"
        >{label}</label
    >

    <select
        id={id}
        name={id}
        required={required}
        class="w-full px-4 py-2 pr-10 bg-white border border-gray-900 rounded-xl focus:border-primary focus:outline-none transition-colors duration-300 text-gray-400  appearance-none"
    >
        <option disabled selected>Choose vehicle</option>
        {
            (options as string[]).map((option: string) => (
                <option value={option}>{option}</option>
            ))
        }
    </select>

    <!-- Chevron icon -->
    <div
        class="pointer-events-none absolute inset-y-0 top-6 right-4 flex items-center cursor-pointer"
    >
        <svg
            class="w-4 h-4 text-gray-500"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M19 9l-7 7-7-7"></path>
        </svg>
    </div>
</div>
